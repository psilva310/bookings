{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>This is the about page</h1>
                <p>{{ index .StringMap "test"}}</p>

                <p>
                    {{ if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your remote IP. Go to <a href="/">Home page</a>
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}